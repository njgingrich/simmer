{
  "name": "simmer",
  "version": "0.1.0",
  "description": "web view for user steam info",
  "main": "src/index.ts",
  "repository": "github.com/njgingrich/simmer",
  "author": "Nathan Gingrich <njgingrich@gmail.com> (njgingrich.com)",
  "license": "MIT",
  "scripts": {
    "start": "yarn run server:dev",
    "server": "yarn run server:dev",
    "server:dev": "webpack-dashboard -- webpack-dev-server --config ./webpack.config.js --inline --hot --progress --watch --open",
    "server:prod": "cross-env NODE_ENV=production webpack-dashboard -- webpack-dev-server --config ./webpack.config.js --port 3000 --host 0.0.0.0 --hot --inline --progress --profile --watch --open --content-base dist/",
    "build": "yarn run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail",
    "clean": "yarn cache clear && rimraf -- dist",
    "test": "NODE_ENV=test mocha --opts mocha.opts"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/mocha": "^2.2.41",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.47",
    "awesome-typescript-loader": "^3.2.1",
    "chai": "^4.1.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.2.0",
    "expose-loader": "^0.7.3",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "2.5.1"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  }
}
